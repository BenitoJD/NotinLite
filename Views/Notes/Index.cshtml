@model IEnumerable<NotinLite.Models.Note>
@using System.Security.Claims

@{
    ViewData["Title"] = "My Notes";
    var userName = User.Identity?.Name;
}

@* Optional: Add reference to icon library if you use one *@
@* Example using Font Awesome: Add CSS link in _Layout.cshtml head, or install package *@


@* --- Display Status Messages --- *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@* --- Header Section --- *@
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1>@ViewData["Title"]</h1>
        @if (!string.IsNullOrEmpty(userName))
        {
            <p class="lead mb-0">Welcome, @userName!</p>
        }
    </div>
    <div>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="fas fa-plus me-1"></i> Create New Note
        </a>
    </div>
</div>


@if (!Model.Any())
{
    @* --- Enhanced "No Notes" State --- *@
    <div class="text-center p-4 p-md-5 border rounded bg-light shadow-sm">
        <i class="fas fa-sticky-note fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">No notes yet!</h4>
        <p class="text-muted">Looks like your notepad is empty. Time to jot something down?</p>
        <a asp-action="Create" class="btn btn-success mt-2">
            <i class="fas fa-pen me-1"></i> Create your first note
        </a>
    </div>
}
else
{
    @* --- Card Grid Layout --- *@
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @* Responsive Grid: 1, 2, then 3 cols. g-4 adds gutters *@
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    @* h-100 makes cards in same row equal height *@
                    <div class="card-body d-flex flex-column">
                        @* Use flex column to push footer down *@
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                        <p class="card-text text-muted flex-grow-1">
                            @* flex-grow-1 allows text to take available space *@
                            @{
                                const int previewLength = 150; // Slightly longer preview for cards
                                string contentPreview = (item.Content?.Length ?? 0) > previewLength
                                ? item.Content.Substring(0, previewLength).Trim() + "..." // Trim whitespace
                                : item.Content ?? "";
                            }
                            @contentPreview @* Display preview directly, maybe limit lines with CSS later if needed *@
                        </p>
                        <p class="card-text mt-auto pt-2">
                            @* mt-auto pushes this down. pt-2 adds space above. *@
                            <small class="text-muted">
                                Last updated: @item.ModifiedDate.ToString("g") @* Short date/time format *@
                            </small>
                        </p>
                    </div>
                    <div class="card-footer bg-transparent border-top-0 text-end">
                        @* bg-transparent removes footer bg, border-top-0 removes line, text-end aligns buttons *@
                        <a asp-action="Details" asp-route-id="@item.NoteId" class="btn btn-sm btn-outline-info me-1" title="Details">
                            <i class="fas fa-eye"></i> @* Details Icon *@
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.NoteId" class="btn btn-sm btn-outline-primary me-1" title="Edit">
                            <i class="fas fa-pencil-alt"></i> @* Edit Icon *@
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.NoteId" class="btn btn-sm btn-outline-danger" title="Delete">
                            <i class="fas fa-trash-alt"></i> @* Delete Icon *@
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}

@* Keep the Scripts section if needed for other page-specific scripts later *@
@* @section Scripts { ... } *@
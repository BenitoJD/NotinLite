@model NotinLite.Models.Note

@{
    ViewData["Title"] = "Confirm Deletion";
}

@* Optional: Add reference to icon library if you use one *@
@* Example using Font Awesome: Add CSS link in _Layout.cshtml head, or install package *@


@* Center the confirmation card *@
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-7">

        <div class="card border-danger shadow-sm">
            @* Use border-danger for emphasis *@
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i> @ViewData["Title"]
                </h4>
            </div>
            <div class="card-body">
                <p class="lead text-danger fw-bold">Are you absolutely sure you want to delete this note?</p>
                <p>This action cannot be undone.</p>

                <hr />

                <h5 class="mt-3">Note Details:</h5>
                <dl class="row mb-0">
                    @* Use dl for semantics, but simplify presentation *@
                    <dt class="col-sm-3">Title:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                    <dt class="col-sm-3">Last Modified:</dt>
                    <dd class="col-sm-9">@Model.ModifiedDate.ToString("g")</dd>

                    <dt class="col-sm-3">Created:</dt>
                    <dd class="col-sm-9">@Model.CreatedDate.ToString("g")</dd>
                </dl>
                @* Optionally show a content snippet if needed, but often just Title/Date is enough for Delete confirmation *@
                @*
                <p class="mt-2"><strong>Content Preview:</strong></p>
                <p class="text-muted fst-italic bg-light p-2 rounded border">
                    @{
                        const int previewLength = 150;
                        string contentPreview = (Model.Content?.Length ?? 0) > previewLength
                            ? Model.Content.Substring(0, previewLength).Trim() + "..."
                            : Model.Content ?? "[No Content]";
                    }
                    @contentPreview
                </p>
                *@
            </div> @* End Card Body *@

            <div class="card-footer bg-light">
                @* Use bg-light for footer to contrast body *@
                <form asp-action="Delete" method="post" class="d-flex justify-content-end gap-2">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="NoteId" />

                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times me-1"></i>Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-1"></i>Yes, Delete this Note
                    </button>
                </form>
            </div> @* End Card Footer *@

        </div> @* End Card *@

    </div> @* End Column *@
</div> @* End Row *@

@* No scripts needed specifically for this view usually *@
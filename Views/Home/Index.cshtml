@{
    ViewData["Title"] = "Welcome to Notin Lite";
}
@using System.Security.Claims

<div class="container px-4 py-5 text-center">
    <div class="mb-5">
        <h1 class="display-4 fw-bold">Notin Lite</h1>
        <p class="lead col-lg-8 mx-auto text-muted">
            Your simple, fast, and secure space to capture ideas, organize thoughts, and manage your notes effortlessly.
        </p>
    </div>

    <div class="mb-5">
        @if (User.Identity != null && User.Identity.IsAuthenticated)
        {
            <p class="fs-5 mb-4">
                Welcome back, <strong class="text-primary">@User.Identity.Name</strong>!
            </p>
            <a class="btn btn-primary btn-lg px-4 py-2 me-md-2 fw-bold" asp-controller="Notes" asp-action="Index">
                View My Notes
            </a>

            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-outline-secondary btn-lg px-4 py-2">
                    Logout
                </button>
            </form>
        }
        else
        {
            <p class="fs-5 mb-4">Ready to get organized?</p>
            <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                <a class="btn btn-primary btn-lg px-4 py-2 me-sm-3 fw-bold" asp-controller="Account" asp-action="Register">
                    Get Started (Register)
                </a>
                <a class="btn btn-outline-secondary btn-lg px-4 py-2" asp-controller="Account" asp-action="Login">
                    Login
                </a>
            </div>
        }
    </div>

    <hr class="my-5 col-lg-6 mx-auto">

    <div class="row g-4 justify-content-center">
        <div class="col-lg-3 col-md-4">
            <div class="card text-center h-100 shadow-sm">
                <div class="card-body">
                    <h4 class="card-title h5">Simple</h4>
                    <p class="card-text small text-muted">Focus on your notes with a clean, intuitive interface.</p>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-4">
            <div class="card text-center h-100 shadow-sm">
                <div class="card-body">
                    <h4 class="card-title h5">Secure</h4>
                    <p class="card-text small text-muted">
                        Your notes are protected with secure login and encrypted data handling.
                        If you lose your password or username, <b>your data is permanently unrecoverable</b>  not even we can access it.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-4">
            <div class="card text-center h-100 shadow-sm">
                <div class="card-body">
                    <h4 class="card-title h5">Fast</h4>
                    <p class="card-text small text-muted">Quick access and lightweight performance for efficiency.</p>
                </div>
            </div>
        </div>
    </div>

</div>
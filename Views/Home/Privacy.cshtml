@using System.Security.Claims 

@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy policy.</p>

@if (User.Identity != null && User.Identity.IsAuthenticated)
{
    <p class="mt-3">
        <strong>Welcome, @User.Identity.Name!</strong> (This page is only visible to logged-in users).
    </p>
    <p>
        Your User ID from claims is: @User.FindFirstValue(ClaimTypes.NameIdentifier) <br />
        Your Email from claims is: @User.FindFirstValue(ClaimTypes.Email)
    </p>
}
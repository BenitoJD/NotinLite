@model NotinLite.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Log in";
}

<div class="container py-4">
    <div class="w-100 mx-auto" style="max-width: 400px;">
        <div class="text-center mb-2">
            <h2 class="h4 fw-bold">@ViewData["Title"]</h2>
            <p class="text-muted small">Sign in to your account</p>
        </div>

        <form id="account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-2" role="alert"></div>

            <div class="mb-2">
                <label asp-for="Username" class="form-label visually-hidden"></label>
                <input asp-for="Username"
                       class="form-control"
                       placeholder="Username"
                       autocomplete="username"
                       aria-required="true" />
                <span asp-validation-for="Username" class="text-danger small d-block mt-1"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Password" class="form-label visually-hidden"></label>
                <input asp-for="Password"
                       type="password"
                       class="form-control"
                       placeholder="Password"
                       autocomplete="current-password"
                       aria-required="true" />
                <span asp-validation-for="Password" class="text-danger small d-block mt-1"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-2">
                <div class="form-check">
                    <input class="form-check-input" asp-for="RememberMe" />
                    <label asp-for="RememberMe" class="form-check-label small">
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>

            @Html.AntiForgeryToken()

            <button id="login-submit" type="submit" class="w-100 btn btn-primary mb-2">
                Log in
            </button>

            <p class="text-center small text-muted mb-0">
                Don't have an account?
                <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="text-decoration-none">
                    Create one
                </a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
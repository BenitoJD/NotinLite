@model NotinLite.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="d-flex align-items-center min-vh-100 bg-gradient-primary">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <div class="position-relative d-inline-block mb-3">
                                <div class="bg-primary rounded-circle position-absolute translate-middle" style="width: 12px; height: 12px; top: 0; left: 50%;"></div>
                                <img src="/path-to-logo.png" alt="Logo" class="img-fluid" style="max-width: 80px;">
                            </div>
                            <h2 class="fw-bold text-primary">@ViewData["Title"]</h2>
                            <p class="text-muted mb-0">Create a new account</p>
                        </div>

                        <form asp-action="Register" method="post" class="needs-validation" novalidate>
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                                <strong>Registration failed.</strong>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Username" class="form-control rounded-pill ps-4" autocomplete="username"
                                       aria-required="true" placeholder="Username" id="username" />
                                <label asp-for="Username" class="ps-4" for="username">Username</label>
                                <span asp-validation-for="Username" class="text-danger small d-block mt-1"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Email" class="form-control rounded-pill ps-4" autocomplete="email"
                                       aria-required="true" placeholder="Email" id="email" />
                                <label asp-for="Email" class="ps-4" for="email">Email</label>
                                <span asp-validation-for="Email" class="text-danger small d-block mt-1"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Password" class="form-control rounded-pill ps-4" autocomplete="new-password"
                                       aria-required="true" placeholder="Password" id="password" />
                                <label asp-for="Password" class="ps-4" for="password">Password</label>
                                <span asp-validation-for="Password" class="text-danger small d-block mt-1"></span>
                            </div>

                            <div class="form-floating mb-4">
                                <input asp-for="ConfirmPassword" class="form-control rounded-pill ps-4" autocomplete="new-password"
                                       aria-required="true" placeholder="Confirm Password" id="confirm-password" />
                                <label asp-for="ConfirmPassword" class="ps-4" for="confirm-password">Confirm Password</label>
                                <span asp-validation-for="ConfirmPassword" class="text-danger small d-block mt-1"></span>
                            </div>

                            @Html.AntiForgeryToken()

                            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary rounded-pill shadow-sm fw-medium py-2 hover-lift"
                                    style="transition: transform 0.2s;">
                                Register
                            </button>
                        </form>

                        <div class="text-center mt-4 pt-3 border-top">
                            <p class="mb-0">
                                Already have an account?
                                <a asp-controller="Account" asp-action="Login" class="text-decoration-none fw-semibold text-primary-hover">
                                    Login
                                </a>
                            </p>
                        </div>

                        <div class="mt-4 pt-3 border-top text-center">
                            <small class="text-muted">
                                By registering, you agree to our
                                <a href="#" class="text-decoration-none text-muted-hover fw-medium">Terms of Service</a>
                                and
                                <a href="#" class="text-decoration-none text-muted-hover fw-medium">Privacy Policy</a>.
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Optional: Add subtle animation for form submission
        document.querySelector('form').addEventListener('submit', function () {
            const btn = document.getElementById('registerSubmit');
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Please wait...';
            btn.disabled = true;
        });
    </script>
}